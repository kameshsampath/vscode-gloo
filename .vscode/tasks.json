// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev-watch",
      "type": "npm",
      "script": "watch",
      "problemMatcher": [
        "$ts-webpack-watch",
        "$ts-checker-eslint-webpack-watch"
      ],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "revealProblems": "onProblem"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "test-watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    }
  ]
}
